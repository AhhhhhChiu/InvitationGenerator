<view class="menu">
	<view wx:for="{{menuItems}}" wx:key="index" class="menu-item" data-index="{{index}}" catchtap="onMenuItemTap">
		<view>
			<text style="color: {{item.color}}" class="iconfont {{item.icon}} menu-item-icon" />
			<text>{{item.text}}</text>
		</view>
		<text class="iconfont icon-chevron-right" />
	</view>
</view>